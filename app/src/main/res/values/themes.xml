<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/defaultPrimary</item>
        <item name="colorPrimaryDark">@color/defaultPrimaryDark</item>
        <item name="colorAccent">@color/defaultAccent</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/defaultText</item>
        <item name="android:textColorSecondary">@color/defaultSecondaryText</item>
        <!-- Icon color -->
        <item name="android:textColorPrimaryInverse">@color/defaultIcons</item>
        <!-- Divider color -->
        <item name="android:colorEdgeEffect">@color/defaultDivider</item>
        <!-- Action Bar and window settings -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="EarthTheme" parent="Theme.AppCompat.Light.DarkActionBar">
