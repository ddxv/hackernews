        <item name="colorAccent">@color/earthAccent</item>
        <item name="android:windowBackground">@color/earthBackground</item>
        <item name="android:textColor">@color/earthText</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/earthBackgroundPrimary</item>
        <item name="backgroundSecondary">@color/earthBackgroundSecondary</item>

    </style>

